<h1>Post a Chat</h1>

<%= form_with model: @post, local: true do |f| %>
  <div>
    <%= f.label :content, "Your chat" %><br>
    <%= f.text_area :content, rows: 6 %>
    <% if @post.errors[:content].any? %>
      <div style="color:crimson;"><%= @post.errors.full_messages_for(:content).join(", ") %></div>
    <% end %>
  </div>

  <div style="margin-top: 1rem;">
    <%= f.submit "Post Chat" %>
  </div>
<% end %>